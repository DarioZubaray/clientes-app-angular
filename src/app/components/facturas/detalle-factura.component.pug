.card.border-dark.mt-3.text-left(*ngIf="factura")
  .card-header {{ titulo }}: {{ factura.descripcion }}
  .card-body
    h4.card-title
      a.btn.btn-light.btn-xs([routerLink]="['/clientes']") &laquo; Volver

    ul.list-group-my-2.px-1
      li.list-group-item.list-group-item-primary Datos del Cliente
      li.list-group-item {{ factura.cliente.nombre }}
      li.list-group-item {{ factura.cliente.apellido }}

    ul.list-group-my-2.px-1
      li.list-group-item.list-group-item-primary Datos de la Factura
      li.list-group-item Folio: {{ factura.id }}
      li.list-group-item Descripci√≥n: {{ factura.descripcion}}
      li.list-group-item Fecha: {{ factura.createAt}}

    table.table.table-striped.table-hover.table-bordered.my-3
      thead
        tr
          th Producto
          th Precio
          th Cantidad
          th Total
      tbody
        tr(*ngFor="let item of factura.items")
          td {{ item.producto.nombre }}
          td {{ item.producto.precio }}
          td {{ item.cantidad }}
          td {{ item.importe }}
    h5.float-right
      span Gran total: 
      span.badge.badge-secondary {{ factura.total }}

    .col-6
      .card.border-info-mb-4
        .card-header Observaciones
        .card-body
          p(*ngIf="factura.observacion") {{ factura.observacion }}
          p(*ngIf="!factura.observacion") No tiene observaciones
