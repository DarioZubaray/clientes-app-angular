.card.border-dark.mt-3
  .card-header
    button.btn.btn-secondary.float-right(type="button", '(click)'="habilitar = !habilitar")
      span {{ habilitar ? 'Ocultar' : 'Mostrar'}}
    span(style="vertical-align: sub;") Clientes

  div.card-body.text-dark('*ngIf'="habilitar")
    h5.card-title Listado de clientes
    .my-2.text-left
      button.btn.btn-rounded.btn-primary([routerLink]="['/clientes/forma']") Crear

    table.table.table-hover
      thead
        tr
          th id
          th nombre
          th apellido
          th email
          th fecha
          th editar
      tbody
        tr('*ngFor'="let cliente of clientes")
          td {{ cliente.id }}
          td {{ cliente.nombre }}
          td {{ cliente.apellido }}
          td {{ cliente.email }}
          td {{ cliente.createAt }}
          td
            button.btn.btn-primary(type='button', name='button', [routerlink]="['/clientes/forma', cliente.id]") Editar
