detalle-cliente(*ngIf="clienteSeleccionado", [cliente]="clienteSeleccionado")

.card.border-dark.bg-transparent.mt-3
  .card-header
    button.btn.btn-secondary.float-right(type="button", '(click)'="habilitar = !habilitar")
      span {{ habilitar ? 'Ocultar' : 'Mostrar'}}
    span(style="vertical-align: sub;") Clientes

  div.card-body.text-dark('*ngIf'="habilitar")
    h5.card-title Listado de clientes
    .my-2.text-left
      button.btn.btn-rounded.btn-success(*ngIf="_authService.hasRole('ROLE_ADMIN')", [routerLink]="['/clientes/forma']") Crear
        fa-icon.text-white.mx-1([icon]="faPlus")

    .alert.alert-info('*ngIf'="clientes?.length === 0") No hay registros que mostrar.
    table.table.table-hover('*ngIf'="clientes?.length > 0")
      thead
        tr
          th(*ngIf="_authService.hasRole('ROLE_USER')") foto
          th nombre
          th apellido
          th email
          th fecha
          th(*ngIf="_authService.hasRole('ROLE_ADMIN')") Crear factura
          th(*ngIf="_authService.hasRole('ROLE_ADMIN')") editar
          th(*ngIf="_authService.hasRole('ROLE_ADMIN')") eliminar
      tbody
        tr('*ngFor'="let cliente of clientes")
          td(*ngIf="_authService.hasRole('ROLE_USER')")
            img.img-fluid.img.thumbnail.rounded.pointer.avatar-sm('(click)'="mostrarModal(cliente)", src='http://localhost:8080/api/clientes/uploads/img/{{cliente.foto}}', *ngIf='cliente?.foto', alt='{{cliente.foto}}')
            img.img-fluid.img.thumbnail.rounded.pointer.avatar-sm('(click)'="mostrarModal(cliente)", src='http://localhost:8080/img/no-usuario.png', *ngIf='!cliente?.foto', alt='usuario sin imagen')
          td {{ cliente.nombre }}
          td {{ cliente.apellido }}
          td {{ cliente.email }}
          td {{ cliente.createAt }}
          td(*ngIf="_authService.hasRole('ROLE_ADMIN')")
            button.btn.btn-success.btn-sm(type='button', name='editar', [routerLink]="['/factura/forma', cliente.id]") Crear factura
              fa-icon.text-white.mx-1([icon]="faPlus")
          td(*ngIf="_authService.hasRole('ROLE_ADMIN')")
            button.btn.btn-primary.btn-sm(type='button', name='editar', [routerLink]="['/clientes/forma', cliente.id]") Editar
              fa-icon.text-white.mx-1([icon]="faEdit")
          td(*ngIf="_authService.hasRole('ROLE_ADMIN')")
            button.btn.btn-danger.btn-sm(type='button', name='eliminar', (click)="delete(cliente)") Eliminar
              fa-icon.text-white.mx-1([icon]="faTrashAlt")
    app-paginador(*ngIf="paginador", [paginador]='paginador', pathType='clientes')
